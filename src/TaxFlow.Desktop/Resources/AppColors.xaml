<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- White/Black Theme Colors -->
    <Color x:Key="PrimaryWhite">#FFFFFF</Color>
    <Color x:Key="PrimaryBlack">#000000</Color>
    <Color x:Key="DarkGray">#333333</Color>
    <Color x:Key="LightGray">#CCCCCC</Color>
    <Color x:Key="AccentGreen">#4CAF50</Color>
    <Color x:Key="AccentRed">#F44336</Color>
    <Color x:Key="AccentBlue">#2196F3</Color>
    <Color x:Key="AccentOrange">#FF9800</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryWhiteBrush" Color="{StaticResource PrimaryWhite}"/>
    <SolidColorBrush x:Key="PrimaryBlackBrush" Color="{StaticResource PrimaryBlack}"/>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>

</ResourceDictionary>
