<UserControl x:Class="TaxFlow.Desktop.Views.Invoices.InvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:vm="clr-namespace:TaxFlow.Desktop.ViewModels.Invoices">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding InvoiceNumber, StringFormat='Invoice #{0}'}"
                               Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="{Binding Status}"
                               FontSize="14"
                               Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Save"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                            Margin="0,0,10,0">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="ContentSave" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="Validate"
                            Command="{Binding ValidateCommand}"
                            Style="{StaticResource MahApps.Styles.Button.Square}"
                            Margin="0,0,10,0">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="CheckCircle" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="Submit to ETA"
                            Command="{Binding SubmitToEtaCommand}"
                            IsEnabled="{Binding IsValid}"
                            Background="{StaticResource AccentGreenBrush}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="CloudUpload" Width="16" Height="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Invoice Header Info -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Column 1 -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Invoice Number" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding InvoiceNumber, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsNewInvoice, Converter={StaticResource InverseBooleanConverter}}"
                                 mah:TextBoxHelper.Watermark="INV-0001"/>

                        <TextBlock Text="Date" Style="{StaticResource LabelTextStyle}" Margin="0,15,0,0"/>
                        <DatePicker SelectedDate="{Binding DateTimeIssued}"/>

                        <TextBlock Text="Document Type" Style="{StaticResource LabelTextStyle}" Margin="0,15,0,0"/>
                        <ComboBox SelectedItem="{Binding DocumentType}">
                            <ComboBoxItem Content="Invoice"/>
                            <ComboBoxItem Content="Credit Note"/>
                            <ComboBoxItem Content="Debit Note"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Column 2 -->
                    <StackPanel Grid.Column="1" Margin="0,0,20,0">
                        <TextBlock Text="Customer" Style="{StaticResource LabelTextStyle}"/>
                        <ComboBox ItemsSource="{Binding Customers}"
                                  SelectedItem="{Binding SelectedCustomer}"
                                  DisplayMemberPath="NameEn"
                                  mah:TextBoxHelper.Watermark="Select Customer"/>

                        <TextBlock Text="Purchase Order Reference" Style="{StaticResource LabelTextStyle}" Margin="0,15,0,0"/>
                        <TextBox Text="{Binding PurchaseOrderReference, UpdateSourceTrigger=PropertyChanged}"
                                 mah:TextBoxHelper.Watermark="Optional"/>
                    </StackPanel>

                    <!-- Column 3 - Validation Status -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Validation Status" Style="{StaticResource LabelTextStyle}"/>
                        <Border Background="{DynamicResource MahApps.Brushes.Gray10}"
                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="10"
                                MinHeight="100">
                            <TextBlock Text="{Binding ValidationMessage}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Invoice Lines -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Lines Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Invoice Lines" Style="{StaticResource SubheaderTextStyle}"/>
                        <Button Content="Add Line"
                                Command="{Binding AddNewLineCommand}"
                                HorizontalAlignment="Right"
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Plus" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </Grid>

                    <!-- Lines DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Lines}"
                              Style="{StaticResource StandardDataGrid}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              MaxHeight="400">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding LineNumber}" Width="40" IsReadOnly="True"/>

                            <DataGridTextColumn Header="Description (EN)" Binding="{Binding DescriptionEn, UpdateSourceTrigger=PropertyChanged}" Width="200"/>

                            <DataGridTextColumn Header="Description (AR)" Binding="{Binding DescriptionAr, UpdateSourceTrigger=PropertyChanged}" Width="200"/>

                            <DataGridTextColumn Header="Item Code" Binding="{Binding ItemCode, UpdateSourceTrigger=PropertyChanged}" Width="100"/>

                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="70"/>

                            <DataGridTextColumn Header="Unit" Binding="{Binding UnitType, UpdateSourceTrigger=PropertyChanged}" Width="60"/>

                            <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="100"/>

                            <DataGridTextColumn Header="Discount" Binding="{Binding Discount, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="80"/>

                            <DataGridCheckBoxColumn Header="VAT" Binding="{Binding HasVat, UpdateSourceTrigger=PropertyChanged}" Width="50"/>

                            <DataGridTextColumn Header="Net" Binding="{Binding NetAmount, StringFormat=N2}" Width="100" IsReadOnly="True"/>

                            <DataGridTextColumn Header="Tax" Binding="{Binding TotalTaxAmount, StringFormat=N2}" Width="80" IsReadOnly="True"/>

                            <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat=N2}" Width="100" IsReadOnly="True"/>

                            <DataGridTemplateColumn Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.RemoveLineCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MahApps.Styles.Button.Square}"
                                                Background="{StaticResource AccentRedBrush}"
                                                Width="30"
                                                Height="30">
                                            <iconPacks:PackIconMaterial Kind="Delete" Width="16" Height="16"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Totals Section -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Notes -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Notes" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="120"
                                 VerticalScrollBarVisibility="Auto"
                                 mah:TextBoxHelper.Watermark="Optional notes..."/>
                    </StackPanel>

                    <!-- Totals -->
                    <StackPanel Grid.Column="1">
                        <Grid Margin="0,5">
                            <TextBlock Text="Total Sales:" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding TotalSalesAmount, StringFormat='EGP {0:N2}'}"
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <TextBlock Text="Total Discount:"/>
                            <TextBlock Text="{Binding TotalDiscountAmount, StringFormat='EGP {0:N2}'}"
                                       HorizontalAlignment="Right"
                                       Foreground="{StaticResource AccentRedBrush}"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <TextBlock Text="Extra Discount:"/>
                            <TextBox Text="{Binding ExtraDiscountAmount, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                     HorizontalAlignment="Right"
                                     Width="120"/>
                        </Grid>

                        <Separator Margin="0,10"/>

                        <Grid Margin="0,5">
                            <TextBlock Text="Net Amount:" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding NetAmount, StringFormat='EGP {0:N2}'}"
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <TextBlock Text="Total Tax (VAT):"/>
                            <TextBlock Text="{Binding TotalTaxAmount, StringFormat='EGP {0:N2}'}"
                                       HorizontalAlignment="Right"/>
                        </Grid>

                        <Separator Margin="0,10"/>

                        <Grid Margin="0,5">
                            <TextBlock Text="TOTAL AMOUNT:"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat='EGP {0:N2}'}"
                                       HorizontalAlignment="Right"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
