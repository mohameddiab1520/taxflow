<UserControl x:Class="TaxFlow.Desktop.Views.Settings.BatchSubmissionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="الإرسال الدفعي للفواتير"
                       FontSize="24"
                       FontWeight="Bold"
                       FlowDirection="RightToLeft"/>
            <TextBlock Text="إرسال دفعات كبيرة من الفواتير والإيصالات إلى مصلحة الضرائب المصرية"
                       FontSize="14"
                       Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                       Margin="0,5,0,0"
                       FlowDirection="RightToLeft"/>
        </StackPanel>

        <!-- Configuration Panel -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Batch Settings -->
            <GroupBox Grid.Column="0"
                      Header="إعدادات الدفعة"
                      Margin="0,0,10,0"
                      FlowDirection="RightToLeft">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Certificate Selection -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="الشهادة الرقمية:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,10"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"
                             Text="{Binding SelectedCertificateThumbprint}"
                             IsReadOnly="True"
                             Margin="0,0,0,10"/>

                    <!-- Filter by Status -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="حالة المستندات:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,10"/>
                    <ComboBox Grid.Row="1" Grid.Column="1"
                              ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding FilterStatus}"
                              Margin="0,0,10,10"/>

                    <!-- Date Range -->
                    <TextBlock Grid.Row="1" Grid.Column="2"
                               Text="من تاريخ:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,10"/>
                    <DatePicker Grid.Row="1" Grid.Column="3"
                                SelectedDate="{Binding FilterStartDate}"
                                Margin="0,0,0,10"/>

                    <!-- Processing Options -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="التزامن (Parallelism):"
                               VerticalAlignment="Center"
                               Margin="0,0,10,10"/>
                    <mah:NumericUpDown Grid.Row="2" Grid.Column="1"
                                       Value="{Binding MaxDegreeOfParallelism}"
                                       Minimum="1"
                                       Maximum="20"
                                       Margin="0,0,10,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="2"
                               Text="محاولات إعادة:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,10"/>
                    <mah:NumericUpDown Grid.Row="2" Grid.Column="3"
                                       Value="{Binding MaxRetryAttempts}"
                                       Minimum="1"
                                       Maximum="10"
                                       Margin="0,0,0,10"/>

                    <!-- Continue on Error -->
                    <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                              Content="الاستمرار عند حدوث أخطاء"
                              IsChecked="{Binding ContinueOnError}"
                              FlowDirection="RightToLeft"/>
                </Grid>
            </GroupBox>

            <!-- Pending Counts -->
            <GroupBox Grid.Column="1"
                      Header="المستندات المعلقة"
                      FlowDirection="RightToLeft">
                <StackPanel>
                    <Border Background="{DynamicResource MahApps.Brushes.Accent}"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,0,0,10">
                        <StackPanel FlowDirection="RightToLeft">
                            <TextBlock Text="الفواتير"
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.8"/>
                            <TextBlock Text="{Binding PendingInvoiceCount}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#9C27B0"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,0,0,15">
                        <StackPanel FlowDirection="RightToLeft">
                            <TextBlock Text="الإيصالات"
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.8"/>
                            <TextBlock Text="{Binding PendingReceiptCount}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Button Content="إرسال دفعة فواتير"
                            Command="{Binding SubmitInvoiceBatchCommand}"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                            Margin="0,0,0,10"
                            Height="40"
                            FlowDirection="RightToLeft"/>

                    <Button Content="إرسال دفعة إيصالات"
                            Command="{Binding SubmitReceiptBatchCommand}"
                            Height="40"
                            FlowDirection="RightToLeft"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Progress and Results -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Progress Panel -->
            <Border Grid.Row="0"
                    Background="{DynamicResource MahApps.Brushes.Gray10}"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="15"
                    Margin="0,0,0,15"
                    Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               FlowDirection="RightToLeft"/>

                    <mah:MetroProgressBar Value="{Binding ProgressPercentage}"
                                         Minimum="0"
                                         Maximum="100"
                                         Height="25"
                                         Margin="0,0,0,5"/>

                    <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:N1}%}"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                </StackPanel>
            </Border>

            <!-- Batch History -->
            <GroupBox Grid.Row="1"
                      Header="سجل الدفعات"
                      FlowDirection="RightToLeft">
                <DataGrid ItemsSource="{Binding BatchJobs}"
                          SelectedItem="{Binding SelectedBatch}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          FlowDirection="LeftToRight">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="نوع المستند"
                                            Binding="{Binding DocumentType}"
                                            Width="120"/>
                        <DataGridTextColumn Header="إجمالي"
                                            Binding="{Binding TotalDocuments}"
                                            Width="80"/>
                        <DataGridTextColumn Header="نجح"
                                            Binding="{Binding SuccessfulDocuments}"
                                            Width="80"/>
                        <DataGridTextColumn Header="فشل"
                                            Binding="{Binding FailedDocuments}"
                                            Width="80"/>
                        <DataGridTextColumn Header="نسبة النجاح"
                                            Binding="{Binding SuccessRate, StringFormat={}{0:N1}%}"
                                            Width="100"/>
                        <DataGridTextColumn Header="المدة"
                                            Binding="{Binding Duration, StringFormat=mm\\:ss}"
                                            Width="80"/>
                        <DataGridTextColumn Header="وقت البدء"
                                            Binding="{Binding StartedAt, StringFormat=yyyy-MM-dd HH:mm:ss}"
                                            Width="150"/>
                        <DataGridTextColumn Header="الحالة"
                                            Binding="{Binding Status}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
