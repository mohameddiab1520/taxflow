# TaxFlow Enterprise - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Connection Strings
SQLITE_CONNECTION=Data Source=taxflow.db
POSTGRESQL_CONNECTION=Host=localhost;Database=taxflow_analytics;Username=postgres;Password=YOUR_PASSWORD
REDIS_CONNECTION=localhost:6379

# ETA (Egyptian Tax Authority) Configuration
ETA_ENVIRONMENT=Production
ETA_AUTH_URL=https://id.eta.gov.eg/connect/token
ETA_API_URL=https://api.invoicing.eta.gov.eg/api/v1
ETA_CLIENT_ID=YOUR_CLIENT_ID_HERE
ETA_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE
ETA_TAXPAYER_PIN=YOUR_TAXPAYER_PIN_HERE
ETA_TAXPAYER_SECRET=YOUR_TAXPAYER_SECRET_HERE

# Application Settings
APP_DEFAULT_LANGUAGE=en
APP_DEFAULT_THEME=Light
APP_BATCH_SIZE=5000
APP_MAX_PARALLEL_THREADS=32
APP_ENABLE_CACHING=true
APP_CACHE_EXPIRATION_MINUTES=30

# Logging Configuration
LOG_MIN_LEVEL=Information
LOG_PATH=logs/taxflow-.txt
LOG_RETENTION_DAYS=30

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@taxflow.com
SMTP_FROM_NAME=TaxFlow Enterprise
SMTP_ENABLE_SSL=true

# Security Settings
JWT_SECRET=YOUR_JWT_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG
JWT_ISSUER=TaxFlow
JWT_AUDIENCE=TaxFlowUsers
JWT_EXPIRATION_HOURS=24

# Encryption Keys
ENCRYPTION_KEY=YOUR_32_CHARACTER_ENCRYPTION_KEY_HERE
ENCRYPTION_IV=YOUR_16_CHARACTER_IV_HERE

# Performance & Monitoring
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_SECONDS=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_SCHEDULE_CRON=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Development/Production Mode
ASPNETCORE_ENVIRONMENT=Production
DOTNET_ENVIRONMENT=Production
